{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}

{{  include ("partials/_title_section.html.twig", {'name':'Connexion'}) }}

    <div class="login_register_wrap section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-xl-6 col-md-10">
                    <div class="login_wrap">
                        <div class="padding_eight_all bg-white">
                            <div class="heading_s1">
                                <h3>Connexion</h3>
                            </div>
                            <form method="post">
                             {% for message in app.flashes('notice') %}
                                    <div class="alert alert-info">{{ message }}</div>
                                {% endfor %}
                                {% if app.user %}
                                    <div class="mb-3">
                                        Vous êtes connecté en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Déconnexion</a>
                                    </div>
                                {% endif %}
                                <div class="message-flash">
                                    {% if error %}
                                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                                    {% endif %}
                                </div>
                                <div class="form-group">
                                    <label for="inputEmail">Email</label>
                                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus  placeholder="Votre Mail">
                                </div>
                                <div class="form-group">
                                    <label for="inputEmail">Mot de passe</label>
                                    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required   placeholder="Votre Mot de Passe">
                                </div>
                                <input type="hidden" name="_csrf_token"
                                value="{{ csrf_token('authenticate') }}">
                                <div class="login_footer form-group">
                                    {# <div class="chek-form">
                                        <div class="custome-checkbox">
                                            <input class="form-check-input" type="checkbox" name="_remember_me" id="_remember_me" name="_remember_me" checked/>
                                            <label class="form-check-label"  for="_remember_me"><span>Se souvenir de moi</span></label>
                                        </div>
                                    </div> #}
                                    <a href="{{path('app_reset_password')}}">Mot de passe Oublier?</a>
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-fill-out btn-block" name="login">Connexion</button>
                                </div>
                            </form>
                            <div class="different_login">
                                <span> OU</span>
                            </div>
                            <ul class="btn-login list_none text-center">
                                <li><a href="/connexion/google" class="btn btn-fill-out btn-block"><i class="ion-social-googleplus"></i>Connexion avec Google</a></li>
                            </ul>
                            <div class="form-note text-center">Vous n'avez pas de compte ? <a href="{{path('app_register')}}">Inscription</a></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
